import java.util.Arrays;
import java.util.Scanner;
import static java.lang.System.*;
import static java.util.Arrays.*;
import java.io.File;

public class GradeBookFileRunner
{
   public static void main( String args[] ) throws Exception
   {
		out.println("Welcome to the Class Stats program!");
		
		Scanner file = new Scanner(new File("gradebook.dat"));
		String  className = file.nextLine();
		int num = file.nextInt();
		
		Class test = new Class ( className, num);
		for ( int i=0; i<num; i++)
		{
			String name= file.nextLine();
			String grades = file.nextLine();
			test.addStudent(i, new Student(name, grades));
		}
		
		out.println(test);
		
		for ( int j =0; j<num; j++)
		{
			for (int k=j; k<num; k++)
			{
				if ( test.getStudentAverage(j) > test.getStudentAverage(k))
				{
					Student stu = test.getStudent(j);
					test.setStudent(j, test.getStudent(k));
				}
			}
		}



	}		
}