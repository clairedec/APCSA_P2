			{
				maze[r][c]=line.charAt(counter);
				counter++;
			}
		}

	}

	public boolean hasExitPath(int r, int c)
	{
		if (r>=0 && c>=0 && r<size && c<size && maze[r][c] ==1)
		{
			return hasExitPath(r, c);
		}
		else
		{
			hasExitPath(r-1, c);
			hasExitPath(r, c-1);
			hasExitPath(r+1, c);
			hasExitPath(r, c+1);
		}

		return false;
	}

